<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="18dp"
    android:orientation="vertical"
    android:background="@color/primary">

    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/str_rating_reviews"
        android:id="@+id/textView5"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/str_be_inspired"
                    android:id="@+id/textView9"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        style="@style/customRatingBar"
                        android:id="@+id/rating_be_inspired"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="3" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/str_good"
                        android:id="@+id/txt_rating_desc_be_inspired"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:textSize="18dp"
                        android:ellipsize="marquee"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/str_be_knowledgeable"
                    android:id="@+id/textView8"
                    android:textColor="@color/white"
                    android:textSize="22dp" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        style="@style/customRatingBar"
                        android:id="@+id/rating_be_knowledgeable"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="3" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/str_good"
                        android:id="@+id/txt_rating_desc_be_knowledgeable"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:textSize="18dp"
                        android:ellipsize="marquee"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/str_be_together"
                    android:id="@+id/textView7"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        style="@style/customRatingBar"
                        android:id="@+id/rating_be_together"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="3" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/str_good"
                        android:id="@+id/txt_rating_desc_be_together"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:textSize="18dp"
                        android:ellipsize="marquee"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/str_talk_together"
                    android:id="@+id/textView6"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        style="@style/customRatingBar"
                        android:id="@+id/rating_talk_together"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="3" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/str_good"
                        android:id="@+id/txt_rating_desc_talk_together"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:textSize="18dp"
                        android:ellipsize="marquee"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp">

        <org.undp_iwomen.iwomen.ui.widget.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_not_now"
            android:id="@+id/btn_not_now"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/btn_ok"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp" />

        <org.undp_iwomen.iwomen.ui.widget.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ok"
            android:id="@+id/btn_ok"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

</LinearLayout>
