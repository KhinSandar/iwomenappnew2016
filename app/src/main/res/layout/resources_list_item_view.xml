<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:minHeight="80dp"
    android:background="@color/white">

    <LinearLayout

        android:id="@+id/ly_list_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"

        android:orientation="horizontal"
        android:padding="3dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.RoundedImageView
                android:id="@+id/resouce_list_item_img"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="72dp"
                android:layout_height="72dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/blank_profile"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:visibility="visible"
                ></com.makeramen.RoundedImageView>
            <ProgressBar
                android:id="@+id/resouce_list_item_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="72dp"
                android:layout_height="72dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:visibility="visible" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center">

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/resource_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxEms="30"
                android:maxLines="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="5dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_gravity="center" />

            <!--<org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/resource_item_text"
                android:layout_marginLeft="16dp"
                android:textColor="@color/secondary_text"
                android:ellipsize="end"
                android:maxEms="30"
                android:maxLines="3"/>-->
        </LinearLayout>




    </LinearLayout>

    <!--<View
        android:layout_below="@+id/ly_list_head"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="50dp" />-->

</RelativeLayout>