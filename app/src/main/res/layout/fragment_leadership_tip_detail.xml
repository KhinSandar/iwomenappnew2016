<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <FrameLayout
            android:id="@+id/tip_leader_icon_frame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/tip_leader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sample_circle" />

        </FrameLayout>

        <TextView
            android:id="@+id/tip_leader_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tip_leader_icon_frame"
            android:text="Dr. Mary"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/tip_leader_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_leader_name"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/tip_leader_icon_frame"
            android:text="Regional Director of Legal and Corporate Affairs in Southeast Asia" />

        <TextView
            android:id="@+id/tip_leader_description_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_leader_description"
            android:layout_toRightOf="@+id/tip_leader_icon_frame"
            android:text="More >>"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/large_sample_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <include layout="@layout/social" />

</LinearLayout>