<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_event_save_button"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_event_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                android:id="@+id/new_event_title"
                style="@style/NewEvent.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/calendar_title"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_event_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                android:id="@+id/new_event_description"
                style="@style/NewEvent.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/calendar_desc"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_event_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                android:id="@+id/new_event_location"
                style="@style/NewEvent.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/calendar_loca"/>
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_event_start_date_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                    android:id="@+id/new_event_start_date"
                    style="@style/NewEvent.EditText.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calendar_start_date"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_event_end_date_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                    android:id="@+id/new_event_end_date"
                    style="@style/NewEvent.EditText.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calendar_end_date"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_event_start_time_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                    android:id="@+id/new_event_start_time"
                    style="@style/NewEvent.EditText.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calendar_start_time"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_event_end_time_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <org.undp_iwomen.iwomen.ui.widget.CustomEditText
                    android:id="@+id/new_event_end_time"
                    style="@style/NewEvent.EditText.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/calendar_end_time"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <org.undp_iwomen.iwomen.ui.widget.CustomButton
        android:id="@+id/new_event_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/iwomen_primary_btn_borderless_material"
        android:text="@string/competition_save"
        android:textColor="@color/white"/>

</RelativeLayout>