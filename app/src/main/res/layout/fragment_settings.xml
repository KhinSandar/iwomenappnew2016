<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.undp_iwomen.iwomen.ui.widget.CustomTextView
            android:id="@+id/settings_language_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            />

        <RadioGroup
            android:id="@+id/settings_language"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_english_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/login_dialog_eng"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"

                />

            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_mm_zawgyi_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_dialog_mm_zawgyi"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                />
            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_mm_unicode_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/login_dialog_mm_uni"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                />

            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_mm_default_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_dialog_mm_deafult"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                />

            <!-- New Coming Soon-->

            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_ethic_shan_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/ethic_shan"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                />

            <org.undp_iwomen.iwomen.ui.widget.CustomRadioButton
                android:id="@+id/settings_ethic_mon_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ethic_chin"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"/>

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:background="#c3c3c3" />

        <CheckBox
            android:id="@+id/settings_getnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:text="Get Notification" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:background="#c3c3c3" />

        <org.undp_iwomen.iwomen.ui.widget.CustomTextView
            android:id="@+id/settings_changeTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginLeft="18dp"
            android:text="Change Theme"
            android:visibility="gone"
            android:textColor="@color/black" />

        <RadioGroup
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>-->

            <RadioButton
                android:id="@+id/setting_color_blue"
                android:layout_width="@dimen/theme_color_icon_size_small"
                android:layout_height="@dimen/theme_color_icon_size_small"
                android:layout_margin="8dp"
                android:background="@drawable/theme_blue_rb_background"
                android:button="@android:color/transparent" />

            <RadioButton
                android:id="@+id/setting_color_yellow"
                android:layout_width="@dimen/theme_color_icon_size_small"
                android:layout_height="@dimen/theme_color_icon_size_small"
                android:layout_margin="8dp"
                android:background="@drawable/theme_yellow_rb_background"
                android:button="@android:color/transparent" />

            <RadioButton
                android:id="@+id/setting_color_pink"
                android:layout_width="@dimen/theme_color_icon_size_small"
                android:layout_height="@dimen/theme_color_icon_size_small"
                android:layout_margin="8dp"
                android:background="@drawable/theme_pink_rb_background"
                android:button="@android:color/transparent"/>

        </RadioGroup>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"

            android:background="#c3c3c3" />


    </LinearLayout>

</ScrollView>