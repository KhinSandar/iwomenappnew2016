<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/competition_text"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_competition_user_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/blank_profile" />

        <org.undp_iwomen.iwomen.ui.widget.CustomTextView
            android:id="@+id/txt_competition_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:text="Su Su"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <org.undp_iwomen.iwomen.ui.widget.CustomTextView
            android:id="@+id/txt_competition_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Finished"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp" >

        <ImageView
            android:id="@+id/img_competition_user_phone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48dp"
            android:src="@drawable/phone"
            android:background="@drawable/competition_user_phone" />

        <ImageView
            android:id="@+id/img_competition_user_viber"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/viber"
            android:background="@drawable/competition_user_viber" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/competition_progress_bar" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
