<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshawdow" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:clickable="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">


                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/tlg_group_logo_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/place_holder"
                        android:visibility="visible"
                        app:riv_border_color="#333333"
                        app:riv_border_width="0dip"
                        app:riv_corner_radius="30dip"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"></com.makeramen.RoundedImageView>

                    <ProgressBar
                        android:id="@+id/tlg_group_logo_progressBar_profile_item"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/tlg_group_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:singleLine="false"

                        android:text="May Doe Arr Man"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/tlg_group_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="KyeitLet, Ayeyarwady"
                        android:textSize="14sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">


                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/tlg_group_mdk_logo_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/mdkb"
                        android:visibility="visible"
                        app:riv_border_color="#333333"
                        app:riv_border_width="0dip"
                        app:riv_corner_radius="30dip"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"></com.makeramen.RoundedImageView>

                    <ProgressBar
                        android:id="@+id/tlg_group_mdk_logo_progressBar_profile_item"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:visibility="gone" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">
                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_about_mdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/tlg_profile"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:paddingRight="10dp">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_who_are_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who are we"
                    android:textStyle="bold"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_member_txt_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TLG Member"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_member_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="25"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_srg_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SRG Member"
                    android:textColor="@color/primary"

                    android:textSize="18sp" />

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_srg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingTop="8dp"

                    android:text="25"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tgl_key_activity_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Acitvities"

                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_key_acitvity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"

                    android:text="..."
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_key_kill_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Skills"

                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                    android:id="@+id/tlg_key_skill_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="......"
                    android:paddingTop="8dp"

                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <FrameLayout
                    android:layout_width="@dimen/feed_item_profile_pic"
                    android:layout_height="@dimen/feed_item_profile_pic">


                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/tlg_leader_profilePic_rounded"
                        android:layout_width="@dimen/feed_item_profile_pic"
                        android:layout_height="@dimen/feed_item_profile_pic"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/blank_profile"
                        android:visibility="visible"
                        app:riv_border_color="#333333"
                        app:riv_border_width="0dip"
                        app:riv_corner_radius="30dip"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"></com.makeramen.RoundedImageView>

                    <ProgressBar
                        android:id="@+id/tlg_leader_profile_progressBar_profile_item"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="@dimen/feed_item_profile_pic"
                        android:layout_height="@dimen/feed_item_profile_pic"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:visibility="invisible" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/tlg_leader_profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hla San Htwae"

                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/tlg_leader_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TLG Leader"
                        android:paddingTop="8dp"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/tlg_leader_profile_bod_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="BOD leader"
                        android:paddingTop="8dp"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        android:paddingRight="16dp"
                        android:paddingTop="16dp">

                        <!--<ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tlg_ph_img"
                            android:src="@drawable/phone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tlg_fb_img"
                            android:src="@drawable/facebook"
                            android:padding="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tlg_viber_img"
                            android:src="@drawable/viber" />-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/tlg_ph_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_normal_phone" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:id="@+id/tlg_fb_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_share_facebook" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:id="@+id/tlg_viber_img"
                                android:src="@drawable/ic_share_viber" />

                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>