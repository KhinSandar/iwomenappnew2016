<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/competition_primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.smk.iwomen.CompetitionNewGameActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question Title Here"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_text_color" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/competition_vertical_margin"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/competition_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/competition_btn_count_down"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/txt_count_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/primary" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/competition_day"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/competition_btn_count_down"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/txt_count_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/primary" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/competition_hour"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/competition_btn_count_down"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/txt_count_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/primary" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/competition_minute"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/competition_btn_count_down"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:id="@+id/txt_count_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/primary" />

                    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/competition_second"
                        android:textColor="@color/primary" />
                </LinearLayout>
            </LinearLayout>

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/competition_how_to_play_game"
                android:textColor="@color/competition_text_color" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_instruction_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/competition_vertical_margin"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/competition_text_color" />

            <org.undp_iwomen.iwomen.ui.widget.CustomButton
                android:id="@+id/btn_competition_take_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/competition_vertical_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/competition_btn_take_challange"
                android:text="@string/competition_take_challenge"
                android:textColor="@color/competition_text_color"
                android:textStyle="bold"
                android:elegantTextHeight="false"
                android:textAllCaps="true"
                android:singleLine="false" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
