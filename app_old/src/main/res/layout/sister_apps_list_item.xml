<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <FrameLayout
        android:id="@+id/sister_app_fy"

        android:layout_width="@dimen/feed_item_profile_pic"
        android:layout_height="@dimen/feed_item_profile_pic">

        <org.undp_iwomen.iwomen.ui.widget.ResizableImageView
            android:id="@+id/sister_app_logo_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/place_holder" />

        <ProgressBar
            android:id="@+id/sister_app_logo_img_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/feed_item_profile_pic"
            android:layout_height="@dimen/feed_item_profile_pic"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:visibility="visible" />
    </FrameLayout>

    <!--<TextView
        android:id="@+id/custom_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Khin Khin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/sister_app_logo_img"/>-->

    <TextView
        android:id="@+id/sister_app_txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/sister_app_fy"
        android:paddingTop="8dp"
        android:text="Bindez"
        android:textColor="@color/black"
        android:textSize="22sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/sister_app_txt_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sister_app_txt_app_name"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:text="Download"
        android:textColor="@color/border_color" />

</RelativeLayout>